<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="DonutChart">
    <apiVersion>45.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>        
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>        
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage">
            <property name="chartWidth" type="String" 
                        default="" label="Chart Width" />
            <property name="displayLabels" type="Boolean" 
                        default="true" label="Display Labels?" />
            <property name="displayValues" type="Boolean" 
                        default="true" label="Display Values?" />
            <property name="number" type="String" default="" label="Number at Center" />
            <property name="label" type="String" default="" label="Label at Center" />
            <property name="labels" type="String" default="" label="List of labels" />
            <property name="values" type="String" default="" label="List of values" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>